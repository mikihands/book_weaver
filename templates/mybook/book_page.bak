{% extends 'base.html' %}
{% load static %}

{% block additional_head %}
<style>
    .page-container {
        position: relative;
        background-color: white;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 2rem auto;
        padding: 0;
        overflow: hidden;
    }
    .page-container img {
        position: absolute;
    }
    .page-container * {
        margin: 0;
        padding: 0;
        /* 기본 서식 초기화 */
    }
</style>
{% endblock %}

{% block content %}
<div class="flex items-center justify-center p-4">
    <div class="w-full max-w-4xl">
        <h1 class="text-3xl font-bold text-center text-gray-800 my-6">{{ book_title }} - Page {{ page_number }}</h1>
        <div class="page-container" style="width: {{ page_width }}px; height: {{ page_height }}px;">
            {{ translated_html|safe }}
        </div>
    </div>
</div>
{% endblock %}
