{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://weaver.schema/page.v2.json",
  "title": "Weaver Page (LLM layout, v2)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version","page","html_stage","has_figures"],
  "properties": {
    "schema_version": { "type": "string", "const": "weaver.page.v2" },

    "page": {
      "type": "object",
      "required": ["page_no","page_w","page_h","page_units"],
      "additionalProperties": false,
      "properties": {
        "page_no": { "type": "integer", "minimum": 1 },
        "page_w": { "type": "number", "minimum": 1 },
        "page_h": { "type": "number", "minimum": 1 },
        "page_units": { "type": "string", "enum": ["px"] }
      }
    },

    "html_stage": { "type": "string", "minLength": 1 },

    "has_figures": {
      "type": "boolean",
      "description": "True if there are any significant images, charts, or diagrams on the page that need to be extracted."
    },
    "figure_labels": {
      "type": "array",
      "description": "A list of descriptive labels for each figure found on the page. This is used as a hint for a secondary detection step.",
      "items": { "type": "string" }
    }
  }
}